{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "expand",
            "command": "python",
            "args": [
                "${workspaceFolder}/.vscode/expand.py",
                "${file}",
                "${lineNumber}",
                "${workspaceFolder}/solutions.txt"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}